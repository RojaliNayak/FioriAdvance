<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="{i18n>Status}" class="sapMDialog">
		<List id="oStatusList" items="{/StatusSet}" mode="MultiSelect" includeItemInSelection="true">
			<StandardListItem title="{Description}" description="{Code}"/>
		</List>
		<endButton>
	    <Button xmlns="sap.m" text="{i18n>Close}" press="onCloseStatus"/>
	</endButton>
	</Dialog>
</core:FragmentDefinition>